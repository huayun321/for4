<% include ./header %>
 
    

  <div class="container">
      
      <div ng-controller="RegisterController"  style="margin-top:30px">
        <div class="row">
           <div class="col-sm-2 modify_sidebar col-xs-2">
         
             <p class="modify_sidebar_p"><strong>资料修改</strong> <img src="/chao/img/modify.gif" width="16" height="16"></p>
                  
             <p class="modify_sidebar_p1"><a href="/users/<%=user.id%>/modify">个人资料</a></p>
              <p class="modify_sidebar_p1"><a href="/users/<%=user.id%>/password">修改密码</a></p>
              <p class="modify_sidebar_p1"><a href="/users/<%=user.id%>/avatar" >修改头像</a></p>
         </div>
     <div class="col-sm-10 col-xs-10">
       <div class="panel panel-default">
        <div class="panel-heading"><strong>修改密码</strong></div>
        <div class="panel-body">
          <form action="/users/<%=user.id%>/password" method="post" class="form-horizontal" role="form">
           <div class="form-group">
            <label for="password" class="col-sm-3 control-label">原密码</label>
            <div class="col-sm-6">
              <input name="old_password" type="password" class="form-control"  ng-model="registerForm.password">
            </div>
          </div>
           <div class="form-group">
            <label for="newpassword" class="col-sm-3 control-label">新密码</label>
            <div class="col-sm-6">
              <input name="new_password" type="password" class="form-control"  ng-model="registerForm.password">
            </div>
          </div>
          <div class="form-group">
            <label for="newpassword" class="col-sm-3 control-label">重复密码</label>
            <span class="col-sm-6">
            <input name="repeat_password" type="password" class="form-control" ng-model="registerForm.passwordConfirmation">
            </span>
            <div class="col-sm-6"></div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-6">
              <button type="submit" class="btn btn-primary" ></i>
                保存
              </button>
            </div>
          </div>
      </form>

      </div>
    </div>
  </div>

